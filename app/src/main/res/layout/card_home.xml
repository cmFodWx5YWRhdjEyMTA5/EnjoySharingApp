<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_card_home"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center"
    android:paddingTop="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentStart="false"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imgUserCardHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtContentCardHome"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/txtUserCardHome"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtContentCardHome"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:textAlignment="textStart"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtTitleCardHome"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/imgUserCardHome"
            android:layout_alignStart="@+id/txtUserCardHome"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txtContentCardHome"
            android:layout_width="325dp"
            android:layout_height="70dp"
            android:layout_below="@+id/imgUserCardHome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:singleLine="false"
            android:textAlignment="textStart"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtBlank"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/baseColorLight" />
    </RelativeLayout>
</TableRow>