<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_card_home"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:gravity="center|start|end"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgUserCardHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/txtContentCardHome"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUserCardHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/txtContentCardHome"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textAlignment="textStart"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtTitleCardHome"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/imgUserCardHome"
                    android:layout_alignStart="@+id/txtUserCardHome"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textAlignment="textStart"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center|start|end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtContentCardHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imgUserCardHome"
                android:layout_centerHorizontal="false"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="3"
                android:minLines="2"
                android:singleLine="false"
                android:text="Qui ci va un contenuto che per ora Ã¨ un contenuto provvisorio molto molto molto lungo giusto per vedere come viene il layout, altrimenti risulta su una sola linea e sminchia tutto, stiamo a vedere va!"
                android:textAlignment="textStart"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnPartecipateRequest"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@color/whiteTrasparent"
                app:srcCompat="@drawable/ic_add_request_custom" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txtBlank"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:background="@color/baseColorLight" />
        </RelativeLayout>

    </LinearLayout>

</TableRow>