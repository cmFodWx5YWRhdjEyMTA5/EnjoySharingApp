<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_card_home"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:gravity="center|start|end"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgUserCard"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/txtContentCardSendRequest"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_image"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/txtUserCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtContentCardSendRequest"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textSize="17dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtBlankGrey2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitleCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgUserCard"
                android:layout_alignStart="@+id/txtUserCard"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/txtDateEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtTitle"
                android:layout_alignStart="@+id/txtTitle"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="@color/grey_dark"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center|start|end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtContentCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imgUserCard"
                android:layout_centerHorizontal="false"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="5"
                android:minLines="2"
                android:singleLine="false"
                android:textAlignment="textStart"
                android:textColor="@color/grey_dark_dark"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_weight="0.2"
                android:gravity="center_vertical|start"
                android:orientation="horizontal"
                android:textAlignment="gravity">

                <ImageView
                    android:id="@+id/imgBtnGender"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/whiteTrasparent"
                    app:srcCompat="@drawable/ic_gender_svago" />

                <TextView
                    android:id="@+id/txtGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey_dark"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtBlankGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

            <LinearLayout
                android:id="@+id/layoutNumberPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.3"
                android:background="@drawable/button_border_grey"
                android:gravity="center_vertical|start"
                android:orientation="horizontal"
                android:textAlignment="gravity">

                <ImageButton
                    android:id="@+id/imgBtnNumberPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@color/whiteTrasparent"
                    app:srcCompat="@drawable/ic_person_custom" />

                <TextView
                    android:id="@+id/txtNumberPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:textAlignment="gravity"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtBlankGrey"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPartecipateRequest"
                style="@style/EnjoySharingGeneralButtonStyle"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_request_partecipate_reverse"
                android:paddingLeft="45dp"
                android:paddingRight="20dp"
                android:text="@string/txtRequestPartecipate"
                android:textAlignment="center" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/txtBlank"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:background="@color/baseColorLight" />
        </RelativeLayout>

    </LinearLayout>

</TableRow>