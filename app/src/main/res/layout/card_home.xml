<?xml version="1.0" encoding="utf-8"?>
<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_card_home"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_margin="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    tools:ignore="MissingConstraints" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <ImageView
            android:id="@+id/imgUserCardHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/txtUserCardHome"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imgUserCardHome"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txtTitleCardHome"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="30dp"
            android:singleLine="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txtContentCardHome"
            android:layout_width="315dp"
            android:layout_height="70dp"
            android:layout_above="@+id/txtBlank"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:singleLine="false"
            android:textAlignment="textStart"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtBlank"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/baseColorLight" />
    </RelativeLayout>
</TableRow>