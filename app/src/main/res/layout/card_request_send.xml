<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_card_send_request"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:gravity="center|start|end"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgUserCardSendRequest"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:background="@drawable/rounded_image"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUserCardSendRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/txtContentCardSendRequest"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textAlignment="textStart"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtTitleCardSendRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/txtUserCardMyEvent"
                    android:layout_alignBottom="@+id/imgUserCardMyEvent"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textAlignment="textStart"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtRequestStatus"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/txtUserCardMyEvent"
                    android:layout_alignBottom="@+id/imgUserCardMyEvent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textAlignment="textStart"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_weight="0.2"
                        android:gravity="center_vertical|start"
                        android:orientation="horizontal"
                        android:textAlignment="gravity">

                        <ImageView
                            android:id="@+id/imgBtnGender"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@color/whiteTrasparent"
                            app:srcCompat="@drawable/ic_gender_svago" />

                        <TextView
                            android:id="@+id/txtGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/grey_dark"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtBlankGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5" />

                    <LinearLayout
                        android:id="@+id/layoutNumberPerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_border_grey"
                        android:gravity="center_vertical|start"
                        android:orientation="horizontal"
                        android:textAlignment="gravity">

                        <ImageButton
                            android:id="@+id/imgBtnNumberPerson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/whiteTrasparent"
                            app:srcCompat="@drawable/ic_person_custom" />

                        <TextView
                            android:id="@+id/txtNumberPerson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:textAlignment="gravity"
                            android:textSize="14dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtBlankGrey"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPartecipateSendRequest"
                style="@style/EnjoySharingGeneralButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_request_partecipate_reverse"
                android:paddingLeft="45dp"
                android:paddingRight="20dp"
                android:text="@string/txtRequestPartecipateReverse"
                android:textAlignment="center" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txtBlank"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="@color/baseColorLight" />
        </RelativeLayout>

    </LinearLayout>

</TableRow>