<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/EnjoySharingTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/EnjoySharingTheme.PopupOverlay"
            app:title="@string/app_name"
            app:titleTextColor="@color/white" />

        <ImageButton
            android:id="@+id/imgBtnSearch"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/relativeLayout"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="false"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="6dp"
            android:background="@color/transparentColor"
            app:srcCompat="@drawable/ic_search_custom" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/baseColor"
        android:paddingBottom="2dp"
        android:theme="@style/EnjoySharingTheme.AppBarOverlay">

        <ImageButton
            android:id="@+id/imgBtnAdd"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/transparentColor"
            app:srcCompat="@drawable/ic_add_custom" />

        <ImageButton
            android:id="@+id/imgBtnRequest"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_icon_home"
            app:srcCompat="@drawable/ic_request" />

        <ImageButton
            android:id="@+id/imgBtnEvent"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_icon_home"
            app:srcCompat="@drawable/ic_event_custom" />

        <ImageButton
            android:id="@+id/imgBtnNotification"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_icon_home"
            app:srcCompat="@drawable/ic_notification_custom" />

    </LinearLayout>

</LinearLayout>